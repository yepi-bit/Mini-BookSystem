/* pages/article/article.wxss */
.publish {position: fixed; right: 40rpx; bottom: 50rpx;}
.publish .service {height: 90rpx; align-items: center;}
.publish image { height: 100%;}
.service {position: relative;animation: dh linear 1s infinite alternate;}
.service .btn {position: absolute; width: 100%; height: 100%;  opacity: 0;}

.pubTitle {display: flex; justify-content: space-between; align-items: center;}
.pubTitle .txt {font-size: 30rpx; position: relative; padding-left: 20rpx; font-weight: bold;} 
.pubTitle .txt::before{display: block; width: 8rpx; height: 32rpx; background-color: blue; content: ""; position: absolute; left: 0; top: 50%; margin-top: -15rpx;}
.pubTitle .more {font-size: 28rpx; color: #666; margin-right: 15rpx;}
.out {padding: 18rpx;box-sizing: border-box;}
.row {display: flex; height: 210rpx; margin-bottom: 30rpx; border-bottom: 1rpx solid #eee;}
.text{ padding-left: 10rpx; display: flex; flex-direction: column; justify-content: space-between; background-color: white;}
.text .title {font-size: 28rpx; overflow: hidden; text-overflow: ellipsis; display: -webkit-box; word-break: break-all; -webkit-box-orient: vertical; -webkit-line-clamp: 3; }
.text .content {font-size: 25rpx;}
.text .time {font-size: 26rpx; color: #999;}